@require '../partials/colors'
@require '../partials/pos'
@require '../partials/functions'

:root
  --nav-height: 5vh
  --nav-side-padding: 2%
.nav
  position: fixed
  top: 0
  left: 0
  z-index: 100
  width: 100vw
  height: var(--nav-height)
  display: flex
  flex-flow: row nowrap
  background-color: $deep_black
  padding: 0 var(--nav-side-padding)
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif

  &--open
    .nav__pages
      transform: translateY(100%)

      &::after
        transform: translate(-50%, -150%)

  &__burger
    width: @height
    height: @width
    background-color: transparent
    border: none

    &__icon
      width: 60%
      height: 60%
      max-width: @height
      max-height: @height
      position: relative
        
  &__logo
    min-width: 10vw
    max-width: 40vw
    height: 100%
    font-size: 2rem 
    text-align: center
    color: #fff
    
    &__link
      display: block
      width: 100%
      height: 100% 
      color: @color
      font-size: inherit

  &__search
    --h: calc(var(--nav-height) * 0.7)
    to_center(absolute)
    height: var(--h)
    width: 30vw
    display: flex
    flex-flow: row nowrap

    &__input
      flex: 11 0 50%
      background-color: $jet
      box-shadow: 
        inset 0 0 6px 2px #000000
      border: none 
      transition: box-shadow .2s 0s ease-out
      color: #fefefe
      padding: 0 2%
      font-size: calc(var(--h) / 2)
      &:focus 
        box-shadow: inset 0 0 1px .5px #000000
        outline: none

    &__submit 
      flex: 1 0 1%
      margin-left: 1%
      background: none
      border: none
      fill: #fefefe
      &:focus
        outline: none

  &__pages
    position: absolute
    left: 0
    top: 0
    z-index: -1
    width: 100%
    height: @height
    display: flex
    flex-flow: row nowrap
    list-style: none
    background-color: $jet
    transition: 
      transform .2s 0s ease-out

    &::after
      save()
      width: 110%;
      height calc(100% + 2px)
      background-color: $deep_black
      transition: @transition

    &__page
      flex: 1 0 10%
      max-width: 15%
      height: @height
      background-color: inherit

      &__link
        display: block
        width: 100%
        height: @height
        font-size: 1rem
        color: #ffffff
        text-decoration: none
        text-align: center
        line-height: @height
        background-color: inherit
        text-transform: uppercase
        transition: 
          background-color .2s 0s ease-out,
          box-shadow .2s 0s ease-out
        font-size: 1rem

        &:hover
        &:focus
          background-color: $orange
          box-shadow: 0 -3px 2px 1px #000000
  &__media 
    --h: calc(var(--nav-height) * 0.8)
    display: flex
    flex-flow: row nowrap
    position: absolute
    right: 0
    top: 0
    height: var(--h)
    margin-top: calc((var(--nav-height) - var(--h)) / 2)
    width: 10%
    padding-right: var(--nav-side-padding)
    justify-content: space-between
    
    &__item
      width: var(--h)
      height: @width
      &__link
        width: 100%
        height: 100% 
        &:hover
        &:focus
          svg > path
            fill: $orange
        svg
          max-width: 100%
          max-height: @max-width
          path
            fill: #ffffff
            transition: 
              fill .2s 0s ease-out
        
          
        
        