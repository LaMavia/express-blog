@require "../partials/colors"
@require "../partials/pos"
@require "../partials/functions"
@require "../partials/breakpoints"


:root
  --header-title-size: 30rem
  --header-img: $blue

.slider
  width: 100vw
  max-width: 100vw
  height: 100vh
  z-index: 10
  overflow: hidden
  position relative

  &__btn
    position: absolute
    top: 0
    width: 5rem
    height: 100vh
    background-color: transparent
    border: none
    color: #cccccc
    line-height: 100vh
    font-size: 4rem
    font-weight: 1
    text-align: center

    &:focus
      outline: none
    &:hover
      color: #ffffff
      cursor: pointer
    &--prev
      left: 0
    &--next
      left: calc(100vw - 5rem)

  &__slides
    --speed: .2s
    --translate: 0vw
    overflow: hidden
    position: absolute
    left: 0
    top: 0
    display: flex
    flex-flow: row nowrap
    width: auto
    height: 100%
    transform: translateX(var(--translate))
    transition: transform var(--speed) 0s ease-in-out

    &__item 
      --img: url("https://loremflickr.com/1280/720")
      width: 100vw
      height: 100%
      display: grid
      grid-template: repeat(10, 1fr) \/ repeat(10, 1fr)
      background: var(--img) center center no-repeat
      box-shadow: inset 0 -2vh 6vh 2vh rgb(#1e1e1e)
      background-size: cover
      background-color: $deep_black
      overflow: hidden
      position: relative

      &:nth-of-type(3n)
        background-color: #2c2c2c
      &:nth-of-type(2n)
        background-color: $violet

      &__line
        position: absolute
        left: 50%
        top: 50%
        transform: translate(-50%, -50%)
        width: floor(100vw / 5)
        height: 5px
        background-color: #ffffff

      &__title 
        grid-row: 3 \/ 6
        grid-column: 1 / -1
        color: #ffffff
        font-size: floor(100vh / 9)
        line-height: floor(100vh / 3.5)
        text-align: center
        text-transform: capitalize
        text-shadow 0 0 1.6px rgba(21,21,21,0.7)
        white-space: pre-line
        overflow: hidden

      &__desc
        grid-row: 6 \/ 7
        grid-column: 4 \/ 8
        text-align: center
        line-height: 10vh
        color: #ffffff
        font-size: 1.3rem
        text-shadow: 0 0 1px rgba(21,21,21,0.7)
        overflow: hidden
        white-space: pre-line

      &__link
        display: block
        width: 60%
        height: 60%
        margin: auto
        grid-row: 7 \/ 8
        grid-column: 5\/7
        text-align: center
        color: #ffffff
        border: 3px solid #ffffff
        line-height: floor(10vh / 100 * @height)
        font-size: 1.3rem
        text-decoration: none
        text-transform: uppercase
        overflow: hidden

  &__btns
    position: absolute
    left: 50%
    bottom: 4%
    transform: translateX(-50%)
    display: flex
    flex-flow: row nowrap

    &__item
      pdd = .6vw
      display: block
      width: (2vw - pdd)
      margin: 0 pdd
      height: 6px
      position: relative
      overflow: hidden

      &__btn
        width: @width
        height: @width
        position: absolute
        top: 50%
        left: 50%
        transform: translate(-50%,-50%)
        box-shadow: inset 0 0 100vh #aaaaaa
        cursor: pointer

        &:checked
          background-color: #ffffff
          color: transparent
          box-shadow: inset 0 0 100vh #ffffff
